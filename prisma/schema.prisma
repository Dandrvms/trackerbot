generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"

}



datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Users {
    id Int @id @default(autoincrement())
    chat_id String @unique
    board Boards[] 
    tracking Trackings[]
    salt String @default("")
    trackall Boolean @default(false)
}

model Boards {
    id Int @id @default(autoincrement())
    name String 
    userId Int
    user Users @relation(fields: [userId], references: [id])
}

model Trackings {
    id Int @id @default(autoincrement())
    postId Int
    userId Int
    content String?
    user Users @relation(fields: [userId], references: [id])
}

model UserSession {
    userId String @id
    pin String
    expires DateTime
}